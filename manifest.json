{
  "manifest_version": 3,
  "name": "Qalam Helper",
  "version": "1.0.0",
  "description": "Enhances NUST's Qalam with better attendance tracking and performance comparisons with class average, saving hours of calculation",
  "author": "Abdullah",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://qalam.nust.edu.pk/*"],
      "js": [
        "utils/helpers.js",
        "modules/attendance.js",
        "modules/gradebook.js",
        "modules/results.js",
        "content.js"
      ],
      "css": ["styles.css"]
    }
  ]
}